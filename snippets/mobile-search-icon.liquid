<!-- Trigger/Open The Modal -->
<button id="mobile-search-button">
  <svg viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="#000000"><circle cx="28" cy="28" r="20"/><line x1="56" y1="56" x2="42.14" y2="42.14"/></svg>
</button>

<!-- The Modal -->
<div id="search-modal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <div id="mobile-search-box-container">
      {% include 'new-search-bar-desktop.liquid' %}
    </div>
  </div>

</div>

<style>
  /* The Modal (background) */
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content/Box */
.modal-content {
  background-color: #fefefe;
  position:relative;
  padding:100px;
  animation-name: search-box-drop-down;
  animation-duration: 0.5s;
  animation-direction: down;
}

@keyframes search-box-drop-down {
  from {
    top: -220px;
  }
  to {
    top: 0px;
  }
}

@keyframes search-box-drop-up {
  from {
    top: 0px;
  }
  to {
    top: -220px;
  }
}

/* The Close Button */
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
  top: -5px;
  right: 10px;
  position: relative;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}
  
button#mobile-search-button{
  height: 45px;
  width:45px;
  background:none;
  border:none;
  cursor:pointer;
  position:relative;
/*   left:22px; */
  top:-2px;
}

div#mobile-search-box-container{
  border: 1px solid #AAAAAA;
  padding:3px;
}
  
</style>

<script>
  // Get the modal
var modal = document.getElementById("search-modal");

// Get the button that opens the modal
var btn = document.getElementById("mobile-search-button");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on the button, open the modal
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
  
</script>